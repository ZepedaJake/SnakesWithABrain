<Window x:Class="SnakesWithABrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesWithABrain"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080" SizeChanged="Window_SizeChanged">
    <Grid x:Name="gridMain" Background="#FFF5F5FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <Grid x:Name="gridPlayArea" Background="White"/>
            <ComboBox x:Name="cmbTrainings" Grid.Row="1" Height="24" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"></ComboBox>
            <ComboBox x:Name="cmbInputType" Grid.Row="1" Height="24" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0" SelectedIndex="0">
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
            </ComboBox>
            <Button x:Name="btnStart" Content="Start" Grid.Row="1" Width="120" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="btnStart_Click"/>
            <Button x:Name="btnStop" IsEnabled="false" Content="Stop and Save" Grid.Row="1" Width="120" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,10,0" Click="btnStop_Click"/>
            <Label Content="Width:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
            <TextBox x:Name="txtWidth" Text="10" VerticalContentAlignment="Center" Grid.Row="1" Width="50" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,50,0,0"/>
            <Label Content="Height:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,50,0,0"/>
            <TextBox x:Name="txtHeight" Text="10" VerticalContentAlignment="Center"  Grid.Row="1" Width="50" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,50,0,0"/>
            <CheckBox x:Name="chkCanWrap" Content="Can Wrap" Width="100" Height="24" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,105,0,0"/>
            <Label Content="Random Death Chance:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0"/>
            <TextBox x:Name="txtDeathChance" Text="5" VerticalContentAlignment="Center" Grid.Row="1" Width="50" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,100,0,0"/>
        </Grid>
        
        <Label x:Name="lblGenInfo" Content="Gen Info" Margin="10,120,10,0" VerticalAlignment="Top" Width="Auto" Grid.Column="1" Height="26"/>
        <Label Content="Tick Speed" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="10,70,0,0" Height="26" Width="67"/>
        <Slider x:Name="sldSimSpeed" Margin="80,75,80,0" VerticalAlignment="Top" Width="Auto" Height="18"  Maximum="1" MouseUp="SldSimSpeed_MouseUp" ValueChanged="SldSimSpeed_ValueChanged" Grid.Column="1"/>
        <Label x:Name="lblBest" Content="Bests" Margin="10,150,10,0" VerticalAlignment="Top" Width="Auto" Height="200" Grid.Column="1"/>
        <Label x:Name="lblLife" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="300" Panel.ZIndex="1000" Grid.Column="1" Height="26"/>
        <Label x:Name="lblCurrentFitness" Content="Label" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="300" Grid.Column="1" Height="26"/>
        <Label Content="AVG top Fitness per Generation" Grid.Column="1" VerticalAlignment="Bottom" HorizontalContentAlignment="Left" Margin="10,0,0,350"/>
        <ScottPlot:WpfPlot x:Name="plotAvgFitness" Margin="10,20,10,200" Grid.Column="1" Grid.RowSpan="2" Height="150" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  />
        <Label Content="Most Food per Generation" Grid.Column="1" VerticalAlignment="Bottom" HorizontalContentAlignment="Left" Margin="10,0,0,160"/>
        <ScottPlot:WpfPlot x:Name="plotFoodEaten" Margin="10,20,10,10" Grid.Column="1" Grid.RowSpan="2" Height ="150" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        <CheckBox x:Name="chkDraw" Content="Draw" HorizontalAlignment="Left" Margin="330,75,0,5" VerticalAlignment="Top" Checked="chkDraw_Checked" Unchecked="chkDraw_Unchecked" Grid.Row="0" Grid.Column="1" Height="15" Width="47"/>
        
        
        
        <Label x:Name="lblBestEver" Grid.Column="1" Height="24" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,300,10,0"></Label>
    </Grid>
</Window>
